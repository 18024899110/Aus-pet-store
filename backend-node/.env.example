# Application
NODE_ENV=development
PORT=8000
API_VERSION=v1

# Database
DATABASE_URL=sqlite:./cypetstore.db
# For MySQL: DATABASE_URL=mysql://user:password@localhost:3306/cypetstore
# For PostgreSQL: DATABASE_URL=postgres://user:password@localhost:5432/cypetstore

# JWT
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=8d

# CORS
CORS_ORIGIN=http://localhost:3001

# Upload
UPLOAD_DIR=static/images/products
MAX_FILE_SIZE=5242880

# Admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin
ADMIN_NAME=Admin User
